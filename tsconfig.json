{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "types/**/*.d.ts",
    "app/types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.vue",
    "utils/**/*.ts",
    "server/**/*.ts"
  ]
}